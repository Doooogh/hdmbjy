<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.fh.mapper.dsno1.fhoa.SpecialitiesMapper">
	
	<!--表名 -->
	<sql id="tableName">
		OA_SPECIALITIES
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.NAME,	
		f.TYPE,	
		f.BZ,	
		f.CREATION_DATE,	
		f.ORGANIZATION_ID,	
		f.BY_B,	
		f.BY_C,	
		f.SPECIALITIES_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		NAME,	
		TYPE,	
		BZ,	
		CREATION_DATE,	
		ORGANIZATION_ID,	
		BY_B,	
		BY_C,	
		SPECIALITIES_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{NAME},	
		#{TYPE},	
		#{BZ},	
		#{CREATION_DATE},	
		#{ORGANIZATION_ID},	
		#{BY_B},	
		#{BY_C},	
		#{SPECIALITIES_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			SPECIALITIES_ID = #{SPECIALITIES_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			NAME = #{NAME},
			BZ = #{BZ},
			CREATION_DATE = #{CREATION_DATE},
			TYPE = #{TYPE},
			SPECIALITIES_ID = SPECIALITIES_ID
		where 
			SPECIALITIES_ID = #{SPECIALITIES_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.SPECIALITIES_ID = #{SPECIALITIES_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		d3.BIANMA BIANMA3,
		d3.NAME DNAME3,
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
			left join 
			<include refid="dicTableName"></include> d3
			on f.TYPE = d3.BIANMA
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件-->
					NAME LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%')
					 or 
					BZ LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%') 
				
				)
		</if>
		<if test="pd.ORGANIZATION_ID != null and pd.ORGANIZATION_ID != ''"><!-- 关键词检索 -->
			and f.ORGANIZATION_ID = #{pd.ORGANIZATION_ID}
		</if>
		ORDER BY f.CREATION_DATE DESC
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="ORGANIZATION_ID != null and ORGANIZATION_ID != ''"><!-- 关键词检索 -->
			and f.ORGANIZATION_ID = #{ORGANIZATION_ID}
		</if>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			SPECIALITIES_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>

	<select id="count" resultType="int" parameterType="pd">
		select count(SPECIALITIES_ID) from
		<include refid="tableName"></include>
		where 1=1
		<if test="ORGANIZATION_ID!=null and ORGANIZATION_ID!=''">
			and  ORGANIZATION_ID=#{ORGANIZATION_ID}
			and type!='3'
		</if>

	</select>
	
	<!-- fh313596790qq(青苔) -->
</mapper>