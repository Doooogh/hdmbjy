<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.fh.mapper.dsno1.approvetype.ApproveTypeMapper">
	
	<!--表名 -->
	<sql id="tableName">
		CMS_APPROVETYPE
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.APPROVETYPE_ID,	
		f.PARENT_ID,	
		f.NAME_EN,	
		f.NAME,	
		f.TIER,	
		f.TYPE,	
		f.RECORD_TYPE,	
		f.FIELD4
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		APPROVETYPE_ID,	
		PARENT_ID,	
		NAME_EN,	
		`NAME`,
		TIER,	
		`TYPE`,
		RECORD_TYPE,	
		FIELD4
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{APPROVETYPE_ID},	
		#{PARENT_ID},	
		#{NAME_EN},	
		#{NAME},	
		#{TIER},	
		#{TYPE},	
		#{RECORD_TYPE},	
		#{FIELD4}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			APPROVETYPE_ID = #{APPROVETYPE_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			PARENT_ID = #{PARENT_ID},
			NAME_EN = #{NAME_EN},
			`NAME` = #{NAME},
			TIER = #{TIER},
			`TYPE` = #{TYPE},
			RECORD_TYPE = #{RECORD_TYPE},
			FIELD4 = #{FIELD4}
		where 
			APPROVETYPE_ID = #{APPROVETYPE_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.APPROVETYPE_ID = #{APPROVETYPE_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					f.NAME LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%')-->
				<!-- or 
					f.NAME LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%') -->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where
			APPROVETYPE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>



	<select id="listAllApproveType" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f

		where 1=1
		<if test="TYPE!=null and TYPE!=''">
			and f.TYPE=#{TYPE}
		</if>

	</select>

	<!--通过ID获取其子一级菜单 -->
	<select id="listSublistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include> f
		where  1=1
		<if test="pd.APPROVETYPE_ID!=null and pd.APPROVETYPE_ID!=''">
			and f.PARENT_ID = #{pd.APPROVETYPE_ID}
		</if>
		<if test="pd.TYPE!=null and pd.TYPE!=''">
			and f.TYPE=#{pd.TYPE}
		</if>
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件-->
					f.NAME LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%')
				<!-- or 
					f.NAME LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%') -->
				)
		</if>
		

	</select>




	<!-- fh313596790qq(青苔) -->
</mapper>